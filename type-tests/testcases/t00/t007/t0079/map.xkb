xkb_keymap {
    xkb_keycodes {
        include "generated"
    };
    xkb_symbols {
        key <x> { [ SetMods(mods = Mod1) ] };
        key <y> { [ LatchMods(mods = Mod2) ] };
        key <z> { [ LockMods(mods = Mod3) ] };
        key <a> { [ a, A ] };
        key <b> { [ RedirectKey(key = <a>, clearMods = all, mods = Shift) ] };
    };
};
