xkb_keymap {
    xkb_keycodes {
        include "generated"
    };
    xkb_symbols {
        key <compose> {
            [ ISO_Group_Latch ],
            [ LatchGroup(group=2, latchToLock) ],
        };
        key <h> {
            [ h ],
            [ hebrew_yod ],
            [ Cyrillic_ha ],
            [ s ],
        };
        key <e> {
            [ e ],
            [ hebrew_qoph ],
            [ Cyrillic_ie ],
        };
        key <scrolllock> {
            [ ISO_Next_Group ],
            [ LockGroup(group=+1) ],
        };
        key <leftalt> {
            [ Alt_L, Meta_L ],
            [ SetMods(modifiers=mod1, clearLocks), SetMods(modifiers=mod1, clearLocks) ]
        };
    };
};

