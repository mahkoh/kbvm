xkb_keymap {
    xkb_keycodes {
        minimum = 1;
        maximum = 255;

        indicator 1 = "DUMMY";

        <a> = 1;
        <b> = 2;
    };

    xkb_types {
        virtual_modifiers Dummy;

        type "TWO_LEVEL" {
            modifiers = Shift;
            level_name[Level1] = "Base";
            level_name[Level2] = "Shift";
            map[Shift] = Level2;
        };
    };

    xkb_compat {
        interpret VoidSymbol {
            repeat = false;
        };
    };

    xkb_symbols {
        modmap Mod1 { <a> };
        modmap Mod2 { <b> };

        key.repeat = true;

        key <a> {
            type[Group1] = "TWO_LEVEL",
            symbols[Group1] = [ A, B ],
            actions[Group1] = [ NoAction(), SetMods(modifiers = Mod1) ]
        };
        key <b> {
            repeat = false,
            type[Group1] = "TWO_LEVEL",
            symbols[Group1] = [ A, B ],
            actions[Group1] = [ SetMods(modifiers = Mod1), NoAction() ]
        };
    };
};
