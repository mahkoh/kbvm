xkb_keymap {
    xkb_keycodes {
        <a> = 1;
        <b> = 2;
    };
    xkb_compat {
        interpret A + NoneOf(Mod1) {
            action = SetMods(mods = Mod1);
        };
    };
    xkb_symbols {
        key <a> {
            [ A ],
        };
        key <b> {
            [ A ],
        };
        modmap Mod1 { <a> };
    };
};
