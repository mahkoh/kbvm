xkb_keymap {
    xkb_keycodes {
        <a> = 1;
        <b> = 2;
    };
    xkb_compat {
        interpret A + NoneOf(Mod1) {
            action = SetMods(mods = Mod1);
        };
        interpret B + AnyOfOrNone(Mod1) {
            action = SetMods(mods = Mod1);
        };
        interpret C + AnyOf(Mod1) {
            action = SetMods(mods = Mod1);
        };
    };
    xkb_symbols {
        key <a> {
            [ A, B, C ],
        };
        key <b> {
            [ A, B, C ],
        };
        modmap Mod1 { <a> };
        modmap Mod2 { <b> };
    };
};
