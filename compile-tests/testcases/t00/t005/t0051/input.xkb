xkb_keymap {
    xkb_keycodes {
        <a> = 1;
    };
    xkb_types {
        virtual_modifiers X = Mod1;

        type "A" {
            modifiers = X;
            map[X] = Level1;
            preserve[X] = X;
        };
    };
    xkb_symbols {
        key <a> {
            type = "A",
            [ A ]
        };
    };
};
