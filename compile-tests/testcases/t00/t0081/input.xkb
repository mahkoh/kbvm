xkb_keymap {
    xkb_keycodes {
        <a> = 1;
    };
    xkb_compat {
        interpret A {
            action = SetMods(mods = Mod1);
        };
        augment interpret A {
            action = SetMods(mods = Mod2);
        };
    };
    xkb_symbols {
        key <a> {
            [ A ]
        };
    };
};
