xkb_keymap {
    xkb_keycodes {
        <a> = 1;
    };
    xkb_compat {
        interpret A + NoneOf(Mod2) {
            action = SetMods(mods = Mod1);
        };
        interpret A + AnyOf(Mod1) {
            action = SetMods(mods = Mod2);
        };
    };
    xkb_symbols {
        key <a> { [ A ] };
        modmap Mod1 { <a> };
    };
};
