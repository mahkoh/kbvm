xkb_keymap {
    xkb_keycodes {
        minimum = 8;
        maximum = 99;

        indicator 1 = "DUMMY";

        <a> = 99;
    };

    xkb_types {
        virtual_modifiers Dummy;

        type "TWO_LEVEL" {
            modifiers = Shift;
            level_name[Level1] = "Base";
            level_name[Level2] = "Shift";
            map[Shift] = Level2;
        };
    };

    xkb_compat {
        interpret VoidSymbol {
            repeat = false;
        };
    };

    xkb_symbols {
        key.repeat = true;

        key <a> {
            repeat = false,
            type[Group1] = "TWO_LEVEL",
            actions[Group1] = [ LatchGroup(group = +2, latchToLock), LatchGroup(group = -3, latchToLock) ]
        };
    };
};
