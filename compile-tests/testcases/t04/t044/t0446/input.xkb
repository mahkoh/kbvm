xkb_keymap {
    xkb_keycodes {
        <1> = 1;
        <2> = 2;
        <3> = 3;
    };
    xkb_symbols {
        key <1> {
            lock,
            radiogroup = 0,
        };
        augment key <1> { radiogroup = 1 };

        key <2> { lock };
        augment key <2> { radiogroup = 1 };

        key <3> {
            lock,
            radiogroup = none,
        };
        augment key <3> { radiogroup = 1 };
    };
};
