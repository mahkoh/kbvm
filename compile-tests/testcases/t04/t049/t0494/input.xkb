xkb_keymap {
    xkb_keycodes {
        <a> = 1;
        <b> = 2;
        <c> = 3;
        <d> = 4;
        <e> = 5;
        <f> = 6;
    };
    xkb_symbols {
        key <a> { repeatLastKey };
        key <b> { !repeatLastKey };
        key <c> { repeatLastKey = true };
        key <d> { repeatLastKey = false };
        key <e> { repeatLastKey, repeat };
        key <f> { repeatLastKey, [ a ] };
    };
};
