xkb_keymap {
    xkb_keycodes {
        minimum = 8;
        maximum = 8;

        indicator 1 = "DUMMY";

        <a> = 1;
    };

    xkb_types {
        virtual_modifiers Dummy;

        type "FOUR_LEVEL" {
            modifiers = Shift;
            level_name[Level1] = "Base";
            level_name[Level2] = "Shift";
            level_name[Level3] = "AltGr";
            level_name[Level4] = "Shift AltGr";
            map[None] = Level1;
            map[Shift] = Level2;
        };
    };

    xkb_compat {
        interpret VoidSymbol {
            repeat = false;
        };
    };

    xkb_symbols {
        key.repeat = true;

        key <a> {
            type[Group1] = "FOUR_LEVEL",
            symbols[Group1] = [ NoSymbol, A ],
            actions[Group1] = [ { SetMods(modifiers = Mod1), SetMods(modifiers = Mod2) }, NoAction() ]
        };
    };
};
