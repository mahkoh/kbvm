xkb_keymap {
    xkb_keycodes {
        minimum = 8;
        maximum = 255;

        virtual indicator 1 = "A";
        virtual indicator 2 = "B";
        virtual indicator 3 = "C";
        virtual indicator 4 = "D";
    };

    xkb_types {
        virtual_modifiers Dummy;
    };

    xkb_compat {
        indicator "A" {
            whichGroupState = None;
        };
        indicator "B" {
            whichGroupState = Base;
        };
        indicator "C" {
            whichGroupState = Latched;
        };

        interpret VoidSymbol {
            repeat = false;
        };
    };

    xkb_symbols {
    };
};
