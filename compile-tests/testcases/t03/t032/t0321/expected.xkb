xkb_keymap {
    xkb_keycodes {
        minimum = 8;
        maximum = 8;

        indicator 1 = "DUMMY";

        <a> = 1;
    };

    xkb_types {
        virtual_modifiers Dummy;

        type "ONE_LEVEL" {
            modifiers = None;
            level_name[Level1] = "Any";
            map[None] = Level1;
        };
    };

    xkb_compat {
        interpret VoidSymbol {
            repeat = false;
        };
    };

    xkb_symbols {
        key.repeat = true;

        key <a> {
            repeat = false,
            type[Group1] = "ONE_LEVEL",
            type[Group2] = "ONE_LEVEL",
            actions[Group1] = [ SetMods(modifiers = Mod1, clearLocks) ],
            actions[Group2] = [ SetMods(modifiers = Mod1) ]
        };
    };
};
