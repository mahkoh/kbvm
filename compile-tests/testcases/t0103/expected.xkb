xkb_keymap {
    xkb_keycodes {
        minimum = 1;
        maximum = 255;

        indicator 1 = "DUMMY";

        <a> = 1;
    };

    xkb_types {
        virtual_modifiers Dummy;

        type "ONE_LEVEL" {
            modifiers = None;
            level_name[Level1] = "Any";
            map[None] = Level1;
        };
    };

    xkb_compat {
        interpret VoidSymbol {
            repeat = false;
        };
    };

    xkb_symbols {
        key.repeat = true;

        key <a> {
            repeat = false,
            type[Group2] = "ONE_LEVEL",
            symbols[Group2] = [ A ]
        };
    };
};
